

<p style="color: green"><%= notice %></p>

<h1>Projects</h1>
<%= link_to "New project", new_project_path, class: "btn btn-success col-lg-3" %>
<div class="card-body">
<div id="projects" class="card-body container-fluid p-3 my-3 border">
<% if !current_user %>
    <%= "kindly login" %>
    </br>
    </br>
    <%= link_to "Login",  new_user_session_path, class:"btn btn-primary"%>
<% else %>
    <% @projects.each do |project| %>
      <% if current_user.id == project.user_id %>
        <%= render project %>
        <p>
          <%= link_to "Show this project", project, class: "btn btn-primary col-lg-3" %>
        </p>
      <% end %>
    <% end %>
  </div>
  
<% end %>
</div> 

